<Page x:Class="TravelApp.addNewTrip"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addNewTrip">

    <Grid Margin="0,0,-320,-174" >
        <!--Button as a Link button using style-->
        <!--end Button as a Link button using style-->

        <Grid x:Name="grid"  Height="624" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="trip3.jpg" TileMode="Tile"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="252*" />
                <!--   <RowDefinition Height="12*" />-->
            </Grid.RowDefinitions>

            <TextBlock Height="20" HorizontalAlignment="Left" Margin="1,0,0,0" x:Name ="errormessage" VerticalAlignment="Top" Width="247"  OpacityMask="Crimson" Foreground="#FFE5572C" Grid.Column="1" />
            <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="85,72,0,0" x:Name="textBlockTripName" Text="Trip Name:" VerticalAlignment="Top" Width="150" Foreground="#FFFCF8F8" Grid.Column="1"  />
            <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="85,122,0,0" x:Name="textBlockMinParticipants" Text="Number of Participants:" VerticalAlignment="Top" Width="286" Foreground="#FFFEF5F5" Grid.Column="1" Padding="0" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="269,79,0,0" x:Name="tripNameVal" VerticalAlignment="Top" Width="222" Grid.Column="1" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="443,127,0,0" x:Name="minParticipantsVal" VerticalAlignment="Top" Width="64" Grid.Column="1" Background="#FFF8F4F4" Foreground="White" />
            <TextBox Height="24" HorizontalAlignment="Left" Margin="625,127,0,0" x:Name="maxParticipantsVal" VerticalAlignment="Top" Width="55" Grid.Column="1" Background="#FFFCF2F2" Foreground="White" />
            <!--For password-->
            <Button Content="Submit" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" Height="37" HorizontalAlignment="Left" Margin="243,527,0,0" Name="Submit" VerticalAlignment="Top" Width="120" Click="Submit_Click" Grid.Column="1" />
            <Button Content="Reset" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" Height="37" HorizontalAlignment="Left" Margin="495,527,0,0" x:Name="resetButton" VerticalAlignment="Top" Width="120" Click="reset_Click" Grid.Column="1" />
            <Button Content="Cancel" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" Height="37" HorizontalAlignment="Right" Margin="0,527,243,0" x:Name="cancelButton" VerticalAlignment="Top" Width="120" Click="cancel_Click" RenderTransformOrigin="0.31,0.57" Grid.Column="1" />
            <CheckBox FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" x:Name="female" Content="Female Only" HorizontalAlignment="Left" Margin="300,272,0,0" VerticalAlignment="Top" Grid.Column="1" Height="29" Width="174" RenderTransformOrigin="0.134,0.713" Checked="femaleChecked"/>
            <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="376,122,0,0" x:Name="textBlockMinParticipants1" Text="Min" VerticalAlignment="Top" Width="67" Foreground="White" Grid.Column="1" />
            <CheckBox FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" x:Name="male" Content="Male Only" Checked="maleChecked" HorizontalAlignment="Left" Margin="85,272,0,0" VerticalAlignment="Top" Grid.Column="1" Height="29" Width="145"/>
            <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="85,172,0,0" x:Name="locationText" Text="Locations:" VerticalAlignment="Top" Width="130" Foreground="#FFFEF5F5" Grid.Column="1" />
            <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="85,222,0,0" x:Name="textBlockMinParticipants_Copy1" Text="Trip Properties:" VerticalAlignment="Top" Width="184" Foreground="#FFFEF5F5" Grid.Column="1" />
            <ComboBox x:Name="locationComboBox" TextBoxBase.TextChanged="Location_TextChanged" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="30" Margin="269,177,0,0" VerticalAlignment="Top" Width="222" IsEditable="True">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Name="checkLocation" Width="222" Checked="MyCheckedAndUncheckedLocations" Unchecked="MyCheckedAndUncheckedLocations" Content="{Binding LocationString}" IsChecked="{Binding Check_Status}" CommandParameter="{Binding LocationID}">
                        </CheckBox>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox x:Name="propComboBox" TextBoxBase.TextChanged="Properties_TextChanged" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="30" Margin="269,227,0,0" VerticalAlignment="Top" Width="222" IsEditable="True">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Name="checkPropertie" Width="222" Checked="MyCheckedAndUncheckedProps" Unchecked="MyCheckedAndUncheckedProps" Content="{Binding ProprtyString}" IsChecked="{Binding Check_Status}" CommandParameter="{Binding PropID}">
                        </CheckBox>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="85,322,0,0" x:Name="datesText" Text="Dates:" VerticalAlignment="Top" Width="92" Foreground="#FFFEF5F5" Grid.Column="1" />
            <Calendar x:Name="tripDates" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="174" Margin="224,322,0,0" VerticalAlignment="Top" Width="189" SelectionMode="MultipleRange"/>
            <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="541,322,0,0" x:Name="addFriendsText" Text="Add Freinds:" VerticalAlignment="Top" Width="157" Foreground="#FFFEF5F5" Grid.Column="1" />
            <ComboBox x:Name="friendsComboBox" TextBoxBase.TextChanged="Friend_TextChanged" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="30" Margin="703,327,0,0" VerticalAlignment="Top" Width="222" IsEditable="True">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox x:Name="checkFriend" Width="222" Checked="MyCheckedAndUncheckedFriends" Unchecked="MyCheckedAndUncheckedFriends" Content="{Binding FriendString}" IsChecked="{Binding Check_Status}" CommandParameter="{Binding FriendID}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <Button x:Name="exitButton" Content="EXIT"  HorizontalAlignment="Right" VerticalAlignment="Top" Width="71" FontWeight="Bold" Click="Button_Click_Exit" Margin="0,20,42,0" Height="52" FontFamily="BN Eyal" FontSize="10" Cursor="Hand" RenderTransformOrigin="-0.534,1.361" Foreground="#FFFBFAFA">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="bdr_main" CornerRadius="20" Margin="4" BorderThickness="1" BorderBrush="Black">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFEE0000" Offset="0.5"/>
                                <GradientStop Color="#FF7A1111" Offset="0"/>
                                <GradientStop Color="#FF7A1111" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,6,8,6" ContentSource="Content" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_main" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF7A1111" Offset="0.5"/>
                                        <GradientStop Color="#FFEE0000" Offset="0"/>
                                        <GradientStop Color="#FFEE0000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Height="30" FontFamily="Century Gothic" FontSize="25" FontStretch="UltraExpanded" FontStyle="Italic" FontWeight="UltraBold" HorizontalAlignment="Left" Margin="538,122,0,0" x:Name="textBlockMaxParticipants" Text="Max" VerticalAlignment="Top" Width="67" Foreground="White" />
    </Grid>
</Page>
